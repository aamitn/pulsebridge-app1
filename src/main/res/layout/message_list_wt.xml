<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	<fragment android:name="medic.gateway.alert.WtListFragment"
			android:id="@+id/lstWtMessages"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			/>
	<!-- This should probably be a Toolbar, but it wouldn't behave and this was
		much quicker to get working.  TODO convert to toolbar -->
	<LinearLayout
			tools:ignore="ButtonStyle"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

		<Button
			android:id="@+id/btnRefreshWtMessageList"
			android:layout_width="102dp"
			android:layout_height="wrap_content"
			android:background="#3F51B5"
			android:text="@string/btnRefreshList"
			android:textColor="#FFFFFF" />

		<Button
			android:id="@+id/btnRetrySelected"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#FFFF00"
			android:text="@string/btnRetrySelected" />
	</LinearLayout>
</LinearLayout>
